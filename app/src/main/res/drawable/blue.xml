<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/border">
        <shape
            android:shape="oval">
            <padding
                android:bottom="3.45dp"
                android:left="3.45dp"
                android:right="3.45dp"
                android:top="3.45dp"/>
            <stroke
                android:width="1.15dp"
                android:color="#5570C4"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#5570C4"/>
            <size
                android:width="32dp"
                android:height="32dp"/>
        </shape>

    </item>
</layer-list>